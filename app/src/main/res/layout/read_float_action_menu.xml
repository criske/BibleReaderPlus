<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/read_float_action_motion_scene">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuSearch"
        style="@style/fabActionMenuChildStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/txtReadActionMenuSearch"
        style="@style/textFloatActionMenuStyle"
        android:text="@string/search" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuFav"
        style="@style/fabActionMenuChildStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_star_black_24dp" />

    <TextView
        android:id="@+id/txtReadActionMenuFav"
        style="@style/textFloatActionMenuStyle"
        android:text="@string/favorites" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:pressedTranslationZ="0dp"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>