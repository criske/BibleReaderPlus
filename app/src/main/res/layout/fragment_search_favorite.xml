<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    app:layoutDescription="@xml/motion_scene_favorites">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppToolbar.Nav"
        app:title="@string/app_name" />

    <ImageButton
        android:id="@+id/btnFavoritesAvailableTags"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon.Sized"
        android:layout_marginStart="12dp"
        android:tint="@android:color/darker_gray"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

    <HorizontalScrollView
        android:id="@+id/scrollChipGroupFavoritesSelectedTags"
        android:layout_width="0dp"
        android:layout_height="44dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFavoritesSelectedTags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/btnFavoritesAddTag"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon.Sized"
        android:contentDescription="@null"
        android:tint="@android:color/darker_gray"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFavoritesAvailableTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/dividerFavorites"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundColor"
        android:elevation="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.constraintlayout.motion.widget.MotionLayout>