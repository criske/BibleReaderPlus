<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuSearch"
        style="@style/fabActionMenuChildStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:alpha="0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fabReadActionMenuMore"
        app:layout_constraintEnd_toEndOf="@+id/fabReadActionMenuMore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fabReadActionMenuMore"
        app:layout_constraintTop_toBottomOf="@+id/fabReadActionMenuFav"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/txtReadActionMenuSearch"
        style="@style/textFloatActionMenuStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/search"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/fabReadActionMenuSearch"
        app:layout_constraintEnd_toStartOf="@+id/fabReadActionMenuSearch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fabReadActionMenuSearch" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuFav"
        style="@style/fabActionMenuChildStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/fabReadActionMenuSearch"
        app:layout_constraintEnd_toEndOf="@+id/fabReadActionMenuMore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/fabReadActionMenuMore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_star_black_24dp" />

    <TextView
        android:id="@+id/txtReadActionMenuFav"
        style="@style/textFloatActionMenuStyle"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        android:text="@string/favorites"
        app:layout_constraintBottom_toBottomOf="@+id/fabReadActionMenuFav"
        app:layout_constraintEnd_toStartOf="@+id/fabReadActionMenuFav"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fabReadActionMenuFav" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReadActionMenuMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="@android:color/transparent"
        app:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReadActionMenuSearch"
        app:layout_constraintVertical_bias="0.81"
        android:alpha="0.3"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>