<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="AppToolbar">
        <!--<item name="android:elevation" tools:targetApi="lollipop">5dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light.TintedIcon</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Light.TintedIcon">
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>

    <style name="AppToolbar.Nav">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">10000dp</item>
    </style>

    <style name="textFloatActionMenuStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="fabActionMenuChildStyle">
        <item name="fabSize">mini</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/backgroundColor</item>
    </style>
</resources>
